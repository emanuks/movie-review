<div class="flex flex-col gap-5">
  <p style="color: green"><%= notice %></p>

  <div class="flex flex-row justify-between  items-center">
    <h1 class="text-4xl font-bold">Movies</h1>
    <%= link_to "New movie", new_movie_path, class: "py-1 px-2 items-center text-center rounded bg-blue-600 font-bold text-white hover:opacity-75" %>
  </div>

  <div id="movies">
    <% @movies.each do |movie| %>
      <div class="mb-10">
        <%= render movie %>

        <div class="flex flex-row gap-1 mt-3">
          <%= link_to "Rate this movie", new_review_for_movie_path(movie.id), class: "px-2 py-1 text-center rounded bg-blue-500 font-bold text-white hover:opacity-75" %>
          <%= link_to "Show this movie", movie, class: "px-2 py-1 text-center rounded bg-blue-600 font-bold text-white hover:opacity-75" %>
        </div>
      </div>
    <% end %>
  </div>

</div>